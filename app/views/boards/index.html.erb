<div class="d-flex align-items-center">
  <div class="blog">
    <h1>Blogs</h1>
  </div>
  <div class="ml-auto boards__linkBox">
    <% if @current_user %>
      <%= link_to  "新規作成", new_board_path, class: 'btn btn-outline-dark' %>
    <% end %>  
  </div>
</div>
<table class="table table-hover boards__table">
  <tbody>
    <% @boards.each do |board| %>
        <div class="card w-100">
          <div class="card-body">
            <h3 class="card-title"><%= board.title %></h3>
            <p class="card-text"><%= truncate(board.body, length: 120) %></p>
            <div class="row d-flex">
              <div class="col" style="top: 10px;">
              <% if @current_user %>
                <%= link_to  "詳細", board, class: 'btn btn-outline-dark' %>
                <%= link_to  "削除", board, class: 'btn btn-outline-dark', method: :delete %>
              <% else %>
                <%= link_to  "詳細", board, class: 'btn btn-outline-dark' %>
              <% end %>  
              </div>
              <div class="col date" style="top: 25px;">
                <p class="card-text text-right"><%= board.created_at.to_s(:datetime_jp) %></p>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </tbody>
</table>
<%= paginate @boards %>